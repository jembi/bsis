    <!-- For issue 103 [Update Requests Functionality] -->
    <changeSet id="201311131120" author="devang">
		<createTable tableName="RequestedComponents">
			<column name="id" type="smallint(6)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="request_id" type="bigint(20)"></column>
			<column name="productType" type="smallint(6)"></column>
			<column name="bloodABO" type="varchar(10)"></column>
			<column name="bloodRh" type="varchar(10)"></column>
			<column name="numUnits" type="int(11)"></column>
			<column name="isDeleted" type="tinyint(1)"></column>
			<column name="createdDate" type="timestamp"></column>
			<column name="createdBy_id" type="smallint(6)"></column>
			<column name="lastUpdatedBy_id" type="smallint(6)"></column>
			<column name="lastUpdated" type="timestamp"></column>
		</createTable>
	</changeSet>
	
	<changeSet id="201311121135" author="devang">
		<addForeignKeyConstraint constraintName="fk_requestId"
			baseTableName="RequestedComponents" baseColumnNames="request_id"
			referencedTableName="Request" referencedColumnNames="id"
			 />
		<addForeignKeyConstraint constraintName="fk_productType"
			baseTableName="RequestedComponents" baseColumnNames="productType"
			referencedTableName="ProductType" referencedColumnNames="id"
			 />
	</changeSet>
	
	
	<changeSet id="201311131220" author="devang">
		<createTable tableName="RequestedComponents_AUD">
			<column name="id" type="smallint(6)" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="request_id" type="bigint(20)"></column>
			<column name="productType" type="smallint(6)"></column>
			<column name="bloodABO" type="varchar(10)"></column>
			<column name="bloodRh" type="varchar(10)"></column>
			<column name="numUnits" type="int(11)"></column>
			<column name="isDeleted" type="tinyint(1)"></column>
			<column name="createdDate" type="timestamp"></column>
			<column name="createdBy_id" type="smallint(6)"></column>
			<column name="lastUpdatedBy_id" type="smallint(6)"></column>
			<column name="lastUpdated" type="timestamp"></column>
			<column name="rev" type="int(11)"></column>
			<column name="revtype" type="tinyint(4)"></column>
		</createTable>
	</changeSet>
	
	<changeSet id="201311121235" author="devang">
		<addForeignKeyConstraint constraintName="fk_requestId_aud"
